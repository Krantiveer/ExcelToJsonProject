<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_margin="7sp"
        android:layout_width="wrap_content"
        android:layout_height="150sp"
        android:src="@drawable/exceltojsonpic"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/select"
        android:background="#6200ee"
        android:textColor="#ffffff"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Step1 : Choose file "
        android:gravity="center"
        />
    <TextView
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E21E25"
        android:text="Notes:File should be .xls"
        />


    <Button
        android:background="#FF4181"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="Step2 : Convert"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:hint="Click Continus"
        android:onClick="sendmessage"
        />
</LinearLayout>